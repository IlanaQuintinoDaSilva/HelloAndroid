<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- Toolbar -->
    <include layout="@layout/toolbar"/>
    <!-- Texto -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_margin"
        android:orientation="vertical">
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btExLinearLayoutPeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exemplo LinearLayout Peso"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/btExLinearLayoutPeso2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exemplo LinearLayout Peso 2"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/btFrameLayoutProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frame Layout ProgressBar"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/btExTableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exemplo Table Layout"
        android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>
